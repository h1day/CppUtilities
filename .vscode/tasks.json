{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "cmake",
            "command": "build",
            "preset": "x64-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Configure Debug",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "type": "cmake",
            "command": "build",
            "preset": "x64-release",
            "group": "build",
            "dependsOn": "Configure Release",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Configure Debug",
            "type": "cmake",
            "command": "configure",
            "preset": "x64-debug",
        },
        {
            "label": "Configure Release",
            "type": "cmake",
            "command": "configure",
            "preset": "x64-release",
        },
        {
            "label": "Clean Debug",
            "type": "cmake",
            "command": "clean",
            "preset": "x64-debug"
        },
        {
            "label": "Clean Release",
            "type": "cmake",
            "command": "clean",
            "preset": "x64-release"
        },
        {
            "label": "Build Tests",
            "type": "cmake",
            "command": "build",
            "preset": "x64-debug",
            "group": "build",
            "dependsOn": "Configure Debug",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Generate Ninja Debug compile_commands.json",
            "type": "cmake",
            "command": "configure",
            "preset": "ninja-debug",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Generate Ninja Release compile_commands.json",
            "type": "cmake",
            "command": "configure",
            "preset": "ninja-release",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Copy Debug compile_commands.json",
            "type": "shell",
            "command": "copy",
            "args": ["out\\build\\ninja-debug\\compile_commands.json", "."],
            "group": "build",
            "dependsOn": "Generate Ninja Debug compile_commands.json",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Copy Release compile_commands.json",
            "type": "shell",
            "command": "copy",
            "args": ["out\\build\\ninja-release\\compile_commands.json", "."],
            "group": "build",
            "dependsOn": "Generate Ninja Release compile_commands.json",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}