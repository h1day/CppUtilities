{
    "mcpServers": {
        "repomix": {
            "type": "stdio",
            "command": "cmd",
            "args": [
                "/c",
                "npx -y repomix --mcp"
            ],
            "env": {}
        },
        "serena": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena",
                "serena-mcp-server"
            ],
            "env": {
                "SERENA_INDEX_GITIGNORE": "1"
            }
        },
        "context7": {
            "type": "stdio",
            "command": "context7-mcp",
            "args": [],
            "env": {}
        }
    }
}